<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="deep-sea" version="1.0" name="deep-sea">
	<description>deep-sea by fm3chanic</description>

	<!-- color values  -->
	<color name="bg1" value="#001a33"/>
	<color name="bg2" value="#00284d"/>
	<color name="bg3" value="#003566"/>
	<color name="fg1" value="#d9e6f2"/>
	<color name="fg2" value="#b3cde6"/>
	<color name="fg3" value="#8cb4d9"/>
	<color name="hl1" value="#4082bf"/>
	<color name="hl2" value="#336899"/>
	<color name="hl3" value="#264e73"/>

	<color name="m1" value="#6666ff"/>
	<color name="m2" value="#66b3ff"/>
	<color name="m3" value="#66ffff"/>
	<color name="m4" value="#66ffb3"/>
	<color name="m5" value="#66ff66"/>
	<color name="m6" value="#b3ff66"/>
	<color name="s1" value="#9999ff"/>
	<color name="s2" value="#99ccff"/>
	<color name="s3" value="#99ffff"/>
	<color name="s4" value="#99ffcc"/>
	<color name="s5" value="#99ff99"/>
	<color name="s6" value="#ccff99"/>

	<!-- global -->
	<style name="text"                        foreground="fg1" background="bg2"/><!-- using bg2, as a darker bg is used for right-margin -->
	<style name="selection"                   foreground="fg1" background="hl2"/>
	<style name="cursor"                      foreground="fg1"/>
	<style name="secondary-cursor"            foreground="fg1"/>
	<style name="current-line"                background="hl3"/>
	<style name="current-line-number"         background="hl2" foreground="fg3" bold="false"/>
	<style name="line-numbers"                background="bg1" foreground="fg3"/>
	<style name="draw-spaces"                 foreground="fg1"/>
	<style name="background-pattern"          background="bg1"/>

	<!-- defaults -->
	<style name="def:base-n-integer"        foreground="m3"/>
	<style name="def:boolean"               foreground="s3"/>
	<style name="def:comment"               foreground="fg3"/>
	<style name="def:constant"              foreground="m5"/>
	<style name="def:decimal"               foreground="m3"/>
	<style name="def:deletion"              strikethrough="true"/>
	<style name="def:doc-comment-element"   italic="true"/>
	<style name="def:emphasis"              italic="true"/>
	<style name="def:error"                 foreground="m1"/>
	<style name="def:floating-point"        foreground="m3"/>
	<style name="def:function"              foreground="m1"/>
	<style name="def:heading"               foreground="m2" bold="true"/>
	<style name="def:identifier"            foreground="s5"/>
	<style name="def:inline-code"           foreground="s6"/>
	<style name="def:insertion"             underline="single"/>
	<style name="def:keyword"               foreground="m6" bold="false"/>
	<style name="def:link-destination"      foreground="s3" italic="false" underline="single"/>
	<style name="def:link-symbol"           foreground="s4" bold="false"/>
	<style name="def:link-text"             foreground="s4"/>
	<style name="def:list-marker"           foreground="s5" bold="false"/>
	<style name="def:net-address"           italic="false" underline="single"/>
	<style name="def:note"                  background="fg3" bold="false"/>
	<style name="def:operator"              foreground="m5"/>
	<style name="def:preformatted-section"  foreground="m2"/>
	<style name="def:preprocessor"          foreground="m2"/>
	<style name="def:shebang"               foreground="m1" bold="false"/>
	<style name="def:special-char"          foreground="m1"/>
	<style name="def:special-constant"      foreground="s5"/>
	<style name="def:statement"             foreground="m5" bold="false"/>
	<style name="def:string"                foreground="m4"/>
	<style name="def:strong-emphasis"       foreground="s1" bold="true"/>
	<style name="def:thematic-break"        foreground="s2" bold="true"/>
	<style name="def:type"                  foreground="m2" bold="false"/>
	<style name="def:warning"               background="m1"/>

	<!-- language specifics -->
	<style name="c:boolean"                 foreground="s3"/>
	<style name="c:comment"                 foreground="fg3"/>
	<style name="c:enum-name"               foreground="m1" bold="false"/>
	<style name="c:included-file"           foreground="m2"/>
	<style name="c:keyword"                 foreground="m6" bold="false"/>
	<style name="c:macro-name"              foreground="m5" bold="false"/>
	<style name="c:preprocessor"            foreground="m2" bold="false"/>
	<style name="c:storage-class"           foreground="m5" bold="false"/>
	<style name="c:string"                  foreground="m4"/>
	<style name="c:type"                    foreground="m2" bold="false"/>
	<style name="js:built-in-constructor"   foreground="m2"/>
	<style name="js:built-in-function"      foreground="m1"/>
	<style name="js:built-in-method"        foreground="m1"/>
	<style name="js:keyword"                foreground="m6"/>
	<style name="js:string"                 foreground="m4"/>
	<style name="js:template-literal"       foreground="s3"/>
	<style name="sh:variable"               foreground="m5"/>
	<style name="sh:variable-definition"    foreground="m6"/>
	<style name="python:builtin-object"     foreground="m2"/>
	<style name="python:function-name"      foreground="m1"/>
	<style name="python:keyword"            foreground="m6" bold="false"/>
	<style name="python:module-handler"     foreground="m2" bold="false"/>
	<style name="xml:attribute-name"        foreground="m5"/>
	<style name="xml:element-name"          foreground="m4"/>

	<!-- other ui  -->
	<style name="bracket-match"               underline="single"/>
	<style name="bracket-mismatch"            foreground="fg1" background="s1"/>
	<style name="right-margin"                foreground="fg1" background="bg1"/>
	<style name="search-match"                foreground="fg1" background="hl2"/>
</style-scheme>